<project>
<target name="ConfigBuildTest">
  <exec executable="cmake" failonerror="true">
    <env key="CC" value="gcc-${CompilerVersion}"/>
    <env key="CXX" value="g++-${CompilerVersion}"/>
    <arg line="-D GMX_DOUBLE=${GMX_DOUBLE} -D GMX_MPI=${GMX_MPI} -D GMX_OPENMP=${GMX_OPENMP} -DGMX_DEFAULT_SUFFIX=off -DCMAKE_BUILD_TYPE=Debug"/>
    <arg value="."/>
  </exec>
  <exec executable="make" failonerror="true"/>
  <exec executable="ctest" failonerror="true">
    <arg line="-D ExperimentalTest"/>
  </exec>
</target>
</project>
