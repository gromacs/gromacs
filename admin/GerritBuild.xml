<project>
<target name="ConfigBuildTest">
  <property name="src.dir" value=".."/>
  <exec executable="cmake" dir="${src.dir}" failonerror="true">
    <env key="CC" value="gcc-${CompilerVersion}"/>
    <env key="CXX" value="g++-${CompilerVersion}"/>
    <arg line="-D GMX_DOUBLE=${GMX_DOUBLE} -D GMX_MPI=${GMX_MPI} -D GMX_OPENMP=${GMX_OPENMP} -DGMX_DEFAULT_SUFFIX=off -DCMAKE_BUILD_TYPE=Debug -D CMAKE_CXX_FLAGS='-Wall -Wno-unused -DOMPI_SKIP_MPICXX'"/>
    <arg value="."/>
  </exec>
  <exec executable="make" dir="${src.dir}" failonerror="true"/>
  <exec executable="ctest" dir="${src.dir}" failonerror="true">
    <arg line="-D ExperimentalTest"/>
  </exec>
</target>
</project>
